<!DOCTYPE html>
<html>
  <head>
    <title>Mark Nuiver <%= " - " + @blogpost.title if @blogpost %><%= " - " + @portfolio_item.title if @portfolio_item %> </title>
    <%= csrf_meta_tags %>
    <% if content_for?(:head) %>
      <%= yield(:head) %>
    <% end %>
    <link href="https://fonts.googleapis.com/css?family=Fira+Sans:300,300i,400,400i,700,700i|Merriweather:300,400,700|Fira+Mono" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/nav' %>
    <% # unless current_page?(root_path) || current_page?(contact_path) %>
      <div class="buffer"></div>
    <% # else %>
      <!-- <div class="jumbo"></div> -->
    <% # end %>

    <div class='container'>
      <%= yield %>
    </div>

    <%= render 'layouts/footer' %>

  </body>
</html>
