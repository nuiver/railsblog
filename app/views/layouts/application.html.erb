<!DOCTYPE html>
<html>
  <head>
    <title>Mark Nuiver</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Fira+Sans:300,300i,400,400i,700,700i|Merriweather:400,700" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/nav' %>
    <% # unless current_page?(root_path) || current_page?(contact_path) %>
      <div class="buffer"></div>
    <% # else %>
      <!-- <div class="jumbo"></div> -->
    <% # end %>

    <div class='container'>
      <%= yield %>
    </div>

    <%= render 'layouts/footer' %>

  </body>
</html>
