<%= form_for(blogpost) do |f| %>
  <% if blogpost.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blogpost.errors.count, "error") %> prohibited this blogpost from being saved:</h2>

      <ul>
      <% blogpost.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :text %>
    <%= f.text_area :text, class: 'form-control'  %>
  </div>

  <div class="form-group">
    <%= f.label :featured %>
    <%= f.check_box :featured  %>
  </div>

  <div class="form-group">
    <%= f.label :tags %><br />
    <% @tags.each do |tag|  %>
      <%= check_box_tag "blogpost[tag_ids][]", tag.id, blogpost.tags.include?(tag) %>
      <%= tag.tag_name %><br />
    <% end %>

  </div>

  <div class="form-group">
    <%= f.label :blogimage %>
    <%= f.file_field :blogimage %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
